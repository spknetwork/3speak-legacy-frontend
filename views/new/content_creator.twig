{% extends './layout.twig' %}

{% block headerHTML %}
    <h1 class="white_col">Content Creator Leaderboard</h1>
{% endblock %}

{% block body %}
    <div class="container-fluid pb-0">
        <div class="video-block section-padding">
            <div class="row justify-content-md-center">
                <div class="col-xl-8 col-sm-8 col-12 mb-3">
                    <div class="channels-card {% if user and user.darkMode == true %} bg-dark{% endif %} " style="border-left: #d4af37 solid 6px">
                        <div class="channels-card-image">
                            <a href="/user/{{ first.username }}"><img class="img-fluid" src="{{ first.username|avatar }}" alt=""></a>
                            <div class="channels-card-image-btn">
                                <a   href="/user/{{ first.username }}" class="btn {% if user and user.darkMode == true %} btn-dark text-light{% else %}btn-light text-dark{% endif %} btn-sm">View Channel
                                </a>
                            </div>
                        </div>
                        <div class="channels-card-body">
                            <div class="channels-title">
                                <a href="/user/{{ first.username }}">{{ first.username }}</a>
                            </div>
