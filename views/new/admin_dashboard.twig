{% extends './layout.twig' %}

{% block body %}
  <h2><a href="/admin/curation">{{ curationCount }} videos from the last 30 hours which still require curation <i class="far fa-clipboard"></i></a></h2>
  <hr>
  <h2><a href="/admin/banlist">{{ banCount }} users with ban status <i class="fas fa-ban"></i></a></h2>
  <hr>
  <h2><a href="/admin/voteDistributors"{% if reviewPeriod == true %} class="text-danger"{% endif %}>Creators with access to the 3speak vote <i class="far fa-vote-yea"></i></a></h2>
  <hr>
  <h2><a href="/admin/creatorDm">Send a message directly to a creator <i class="far fa-envelope"></i></a></h2>
  <hr>
  <h2><a href="/admin/verification">{{ verificationCount }} user{% if verificationCount != 1 %}s{% endif %} awaiting verification <i class="far fa-check-circle"></i></a></h2>
  <hr>
  <h2><a href="/admin/strikes">Strikes <i class="far fa-user-slash"></i></a></h2>
  <hr>
  <h2><a href="/admin/unique">Unique views <i class="fas fa-eye"></i></a></h2>
{% endblock %}
