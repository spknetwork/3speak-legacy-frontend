
<h4 class="d-flex justify-content-between align-items-center mb-3">
  <span class="text-muted">Order Details</span>
</h4>
<ul class="list-group mb-3">

  <li class="list-group-item {% if user and user.darkMode == true %}bg-dark{% endif %} d-flex justify-content-between lh-condensed">
    <div>
      <h6 class="my-0">Order Status:</h6>
      <small class="text-muted">
        {{ order.status|shop_order_status_description }}
      </small>
    </div>
  </li>
  {% if order.payment_tx_id != '' %}
    <li class="list-group-item {% if user and user.darkMode == true %}bg-dark{% endif %} d-flex justify-content-between lh-condensed">
      <div>
        <h6 class="my-0">Transaction ID:</h6>
        <small class="text-muted">
          <a href="{{ order.payment_tx_id|hiveblocks('tx') }}" target="_blank">{{ order.payment_tx_id}}</a>
        </small>
      </div>
      <span class="text-muted">
        {% if order.status == 'pending' or order.status == 'tx_found' %}
          <i class="fa fa-spin fa-spinner"></i>
        {% endif %}

        {% if order.status == 'complete' or order.status == 'fulfilled' or order.status == 'canceled' %}
          <i class="fa fa-check-circle text-success"></i>
        {% endif %}

      </span>
    </li>
  {% endif %}

  {% if metadata is defined and metadata.channel is defined %}
  <li class="list-group-item {% if user and user.darkMode == true %}bg-dark{% endif %} d-flex justify-content-between lh-condensed">
    <div>
      <h6 class="my-0">Channel:</h6>
      <small class="text-muted">
        {{ metadata.channel }}
      </small>
    </div>
  </li>
  {% endif %}

  <li class="list-group-item {% if user and user.darkMode == true %}bg-dark{% endif %} d-flex justify-content-between lh-condensed">
    <div>
      <h6 class="my-0">Order Number:</h6>
      <small class="text-muted">
        {{ order._id }}
      </small>
    </div>
  </li>
  <li class="list-group-item {% if user and user.darkMode == true %}bg-dark{% endif %} d-flex justify-content-between lh-condensed">
    <div>
      <h6 class="my-0">Customer Number:</h6>
      <small class="text-muted">
        {{ order.user_id }}
      </small>
    </div>
  </li>

</ul>
